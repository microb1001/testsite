<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{{.Title}}</title>
    <style>
        body {
            font-family: sans-serif;
        }
        h1 {
            background: #ddd;
        }
        #sidebar {
            float: left;
        }
    </style>
</head>
<body>
<h1>{{.Title}}</h1>

<div id="sidebar">
    {{block "sidebar" .}}
    {{- range .Cat}}

    <ul>
        {{.Key}}
        {{- range .Value}}
        <li><a href="{{.Url}}">{{.Key}}</a></li>
        {{- end}}
    </ul>
    {{- end}}

    <h2>Links</h2>

    {{/* The dashes in the following template directives
    ensure the generated HTML of this list contains no
    extraneous spaces or line breaks. */}}

    {{end}}
</div>

{{block "content" .}}
<div id="content">
    {{.Body}}
    {{if .Pager.Prev}}<a href="{{.Pager.Prev}}" class=""><span class="button__text">Назад</span></a>{{end}}
    {{- range .Pager.Elem}}
    {{if .Current}}
    <a class="{{.Class}}"><span class="button__text">{{.Page}}</span></a>
    {{else}}
    <a href="{{.Url}}" class="{{.Class}}"><span class="button__text">{{.Page}}</span></a>
    {{end}}
    {{- end}}
    {{if .Pager.Next}}<a href="{{.Pager.Next}}" class=""><span class="button__text">Вперед</span></a>{{end}}
    <ul>
        {{- range .Links}}
        <li><a href="{{.URL}}">{{.Brief}}</a></li>
        {{- end}}
    </ul>

</div>
{{end}}
{{.Timer}}
</body>
</html>