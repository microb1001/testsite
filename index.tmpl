<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{{.Title}}{{.Session}}</title>
    <style>
        body {
            font-family: sans-serif;
        }
        h1 {
            background: #ddd;
        }
        #sidebar {
            float: left;
        }
    </style>
</head>
<body>
<h1>{{.Title}}  {{.Session}}</h1>

<div id="sidebar">
    {{block "sidebar" .}}
    {{- range .Cat}}

    <ul>
        {{.Key}}
        {{- range .Value}}
        <li><a href="{{.Url}}">{{.Key}}</a></li>
        {{- end}}
    </ul>
    {{- end}}

    <h2>Links</h2>

    {{/* The dashes in the following template directives
    ensure the generated HTML of this list contains no
    extraneous spaces or line breaks. */}}

    {{end}}
</div>

{{block "content" .}}
<div id="content">
    {{.Body}}
    {{if .Pager.Prev}}<a href="{{.Pager.Prev}}" class=""><span class="button__text">Назад</span></a>{{end}}
    {{- range .Pager.Elem}}
    {{if .Current}}
    <a class="{{.Class}}"><span class="button__text">{{.Page}}</span></a>
    {{else}}
    <a href="{{.Url}}" class="{{.Class}}"><span class="button__text">{{.Page}}</span></a>
    {{end}}
    {{- end}}
    {{if .Pager.Next}}<a href="{{.Pager.Next}}" class=""><span class="button__text">Вперед</span></a>{{end}}
    <ul>
        <style> #sidebar-left {padding-top: 30px;} </style>
        {{- range .Links}}
        <li>
            <div class="liclass">
                <a style="text-align:center;" href="{{.URL}}"><img src="{{.Image}}"><br><br>{{.Brief}}</a></div>            <div class="price">{{.Price}}</div>
        </li>


        {{/*<li><a href="{{.URL}}">{{.Brief}}</a></li>*/}}
        <div class="btn-group "><a class="btn" href="/cart/?additem={{.VendorCode}}" rel="nofollow" id="addToCart_btn">Купить</a></div>
        {{- end}}
    </ul>
    {{.Timer}}
</div>
{{end}}

</body>
</html>